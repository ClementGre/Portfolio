// Import global variables
@import 'variables.styl'

@font-face {
  font-family: 'Domine';
  src: url('domine.ttf');
}
@font-face {
  font-family: 'Inter';
  src: url('inter.ttf');
}

*
  font-family 'Domine', serif

section
  width 100%

  display flex
  flex-direction column
  justify-content center
  align-items center

div.container
  width 900px;
  max-width calc(100vw - 2em);

section > div.container > h2
    font-size 3rem
    margin-bottom 0.2em
    color transparent
    -webkit-text-stroke 1px $p-green-dark
    font-family 'Inter', sans-serif

    &:after
      content ''
      display block
      width 1.2em
      height .06em
      border-radius .03em
      margin-top .1em
      background $p-green
